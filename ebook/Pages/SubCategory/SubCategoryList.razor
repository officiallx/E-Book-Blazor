@page "/subcategory"

<PageTitle>SubCategory</PageTitle>

@using ebook.Models.SubCategory

<MudButton @onclick="@(()=>AddSubCategory())" Variant="Variant.Filled" Color="Color.Primary">
    Add SubCategory
</MudButton>

<MudTable Items="subCategoryModel" Hover="true" SortLabel="Sort By" Elevation="0"  Filter="new Func<SubCategoryModel,bool>(FilterFunc1)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Sub Category</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<SubCategoryModel, object>(x=>x.subcategory_id)">SN</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<SubCategoryModel, object>(x=>x.subcategory_name)"> Sub Category Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<SubCategoryModel, object>(x=>x.description)"> Description</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<SubCategoryModel, object>(x=>x.category_id)"> Category</MudTableSortLabel></MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="SN">@context.subcategory_id</MudTd>
        <MudTd DataLabel="SubCategory Name">@context.subcategory_name</MudTd>
        <MudTd DataLabel="Description">@context.description</MudTd>
        <MudTd DataLabel="Description">@context.category_name</MudTd>
        <MudTd DataLabel="">
            <MudFab @onclick="@(()=>EditSubCategory(@context))" Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" />
            <MudFab @onclick="@(()=>DeleteSubCategory(@context.subcategory_id))" Color="Color.Secondary" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" IconSize="Size.Small" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{5, 10}" />
    </PagerContent>
</MudTable>