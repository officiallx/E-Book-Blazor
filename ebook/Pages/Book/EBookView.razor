@page "/ebooks/{bookId}"

<PageTitle>Ebook</PageTitle>

@if (eBooksList.Count > 0)
{
    <PageTitle>Ebook-@eBooksList.FirstOrDefault().title</PageTitle>
    <MudText Typo="Typo.h4" Style="text-align:center">@eBooksList.FirstOrDefault().title.ToUpper()</MudText>
    <br/>
    <MudImage Src=@eBooksList.FirstOrDefault().book_cover ObjectFit="ObjectFit.Contain" Alt="EBook Images" Style="width:100%;height:90%;" />
    @foreach (var books in eBooksList)
    {
        <MudImage Src=@books.book_image ObjectFit="ObjectFit.Contain" Alt="EBook Images" Style="width:100%;height:90%;" />
    }
}
else
{
    <MudContainer Style="height:80%;">
        <MudText Typo="Typo.h6" Style="text-align:center">No Data</MudText>
    </MudContainer>
}
